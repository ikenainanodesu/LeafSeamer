{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "noEmit": true,
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "jsx": "react-jsx"
  },
  "include": ["bundles/**/*", "shared/**/*"],
  "exclude": ["node_modules", "dist"]
}
